<MudCard>
    <MudForm Model="Model"
             @ref="_form"
             Validation="@(_validator.ValidateValue)"
             ValidationDelay="0">
        <MudCardContent>
            <MudTextField @bind-Value="@Model.ProjectName"
                          For="@(()=>Model.ProjectName)"
                          Immediate="true"
                          Label="Project Name"/>
        </MudCardContent>
        <MudCardActions>
            <MudButton Variant="Variant.Filled"
                       Color="Color.Primary"
                       Class="ml-auto"
                       OnClick="@(async ()=> await Submit())">Create</MudButton>
        </MudCardActions>
    </MudForm>
</MudCard>